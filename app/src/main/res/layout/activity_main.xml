<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main">

    <!-- Judul Halaman Daftar Mahasiswa -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mahasiswaHeading"
        android:layout_marginTop="16dp"
        android:text="Daftar Mahasiswa"
        android:layout_marginStart="16dp"
        android:textColor="@color/blue"
        android:textSize="24sp"/>

    <!-- RecyclerView untuk menampilkan daftar mahasiswa -->
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/mahasiswaRecyclerView"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/mahasiswaHeading"
        android:padding="10dp"/>

    <!-- Tombol Floating untuk menambahkan mahasiswa baru -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/addMahasiswaButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="16dp"
        android:src="@drawable/baseline_add_24"
        app:tint="@color/white"
        app:backgroundTint="@color/blue"/>

</RelativeLayout>
